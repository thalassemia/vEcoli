                    "catalyzed by": "EG10040-MONOMER[p]"
                }
            },
            "kinetic_parameters": {
                "antibiotic_hydrolysis": {
                    "EG10040-MONOMER[p]": {
                        "kcat_f": 10.0,
                        "ampicillin[p]": 0.01
                    }
                }
            }
        }
    },
    
    "emitter_arg": [
        ["host", "localhost:27017"]
    ],
    "emitter": "database",

    "initial_state_file": "wcecoli_t0",


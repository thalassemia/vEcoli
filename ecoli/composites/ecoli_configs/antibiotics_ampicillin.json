            "reduce_murein_objective" : true
        },
        "ecoli-lysis-initiation": {},
        "murein-division": {}
    },

    "lysis_config": {
        "secreted_molecules": [
          "EG10040-MONOMER[p]",
          "ampicillin[p]",
          "ampicillin_hydrolyzed[p]"
        ]
    },

    "flow": {
        "ecoli-pbp-binding": [["ecoli-shape"]]
